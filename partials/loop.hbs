{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="sm-col sm-col-6 md-col-4 home-article px1 {{post_class}} {{#if image}}has-image{{/if}}">
  {{!-- <a href="{{url}}"> --}}
    <header class="home-article-top">
      <div class="home-article-type mt2 ml3">{{tags limit="1" class="home-article-type py2 py3"}}</div>
      {{#if image}}
        <img src="{{image}}" height="150px" class="home-article-image">
      {{/if}}
    </header>
    <section class="home-article-content px3">
      <h2 class="mt1 mb1 orange">{{{title}}}</h2>
      <p>{{excerpt words="32"}} <a href="{{url}}" class="home-article-link orange px1">Continue Reading &#8605;</a></p>
    </section>
  </a>
</article>
{{/foreach}}
