{{!< default}}
{{! Tag above is for importing into the {body} tag of the default.hbs template}}

{{navigation}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<main class="content article" role="main">
  <article class="sm-col sm-col-12 {{post_class}}">

    <header class="post-header">
      <h1 class="article-header orange mb1 mt2">{{title}}</h1>
      {{! Everything from the author is pulled in using this conditional tag}}
      {{#author}}
        <p class="article-byline">Words by {{name}}</p>
      {{/author}}
    </header>

    <section class="article-content">
      {{content}}
    </section>

  </article>
  <div class="col col-12 article-footer mb3">
    <div class="brand orange">in residence</div>
    <a href="/" class="btn">Home &#8604; {{tags limit="1"}}</a>
  </div>
</main>

{{/post}}
