{{!< default}}
{{! Tag above is for importing into the {body} tag of the default.hbs template}}

{{#post}}
{{! Everything inside the #post tags pulls data from the post }}

{{> "post-nav"}}

<main class="content article" role="main">
  <article class="sm-col sm-col-12 {{post_class}} {{#if image}}has-image{{/if}}">

    <header class="post-header">
      <h1 class="article-header orange mb1 mt2">{{title}}</h1>
      {{! Everything from the author is pulled in using this conditional tag}}
      {{#author}}
        <p class="article-byline"><em>Words by {{name}}</em></p>
      {{/author}}
    </header>

    <section class="article-content">
      {{content}}
    </section>

  </article>
  <div class="col col-12 article-footer mb3">
    <div class="brand orange">{{@blog.title}}</div>
    <a href="/" class="btn">Home &#8604;</a>
    {{#foreach tags}}
      <a href="{{url}}" title="{{name}}" class="tag-{{id}} dark-orange">{{name}}</a>
    {{/foreach}}
  </div>
  </div>
</main>

{{/post}}
